{
  "name": "thecalista-backend",
  "version": "1.0.0",
  "description": "Backend API for TheCalista e-commerce application",
  "main": "dist/index.js",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register src/index.ts",
    "build": "rimraf dist && tsc && tsc-alias",
    "start": "node -r tsconfig-paths/register dist/index.js",
    "start:prod": "node dist/index.js",
    "clean": "rimraf dist",
    "seed": "ts-node -r tsconfig-paths/register src/scripts/seed.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "ecommerce",
    "api",
    "express",
    "mongodb",
    "typescript"
  ],
  "author": "TheCalista",
  "license": "MIT",
  "engines": {
    "node": "20.x"
  },
  "dependencies": {"razorpay": "^2.9.4",
    "@supabase/supabase-js": "^2.57.4",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^5.1.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "google-auth-library": "^9.15.0",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.16",
    "stripe": "^18.5.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.7",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.5.2",
    "@types/nodemailer": "^6.4.15",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "tsc-alias": "^1.8.7",
    "typescript": "^5.9.2"
  }
}
